<%- include('../partials/header') %>
<section>
  <h2>Réservations — Catway #<%= catwayId %></h2>
  <p><a href="/pages/catways/<%= catwayId %>/reservations/new">Créer une réservation</a> · <a href="/pages/catways">Retour Catways</a></p>
  <% if (!reservations || reservations.length === 0) { %>
    <p>Aucune réservation.</p>
  <% } else { %>
    <table>
      <thead>
        <tr>
          <th>Client</th>
          <th>Bateau</th>
          <th>Début</th>
          <th>Fin</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
      <% reservations.forEach(r => { %>
        <tr>
          <td><%= r.clientName %></td>
          <td><%= r.boatName %></td>
          <td><%= (r.startDate||'').slice(0,10) %></td>
          <td><%= (r.endDate||'').slice(0,10) %></td>
          <td>
            <a href="/pages/catways/<%= catwayId %>/reservations/<%= r._id %>/edit">Modifier</a>
            <form method="post" action="/pages/catways/<%= catwayId %>/reservations/<%= r._id %>/delete" style="display:inline" onsubmit="return confirm('Supprimer ?')">
              <button type="submit">Supprimer</button>
            </form>
          </td>
        </tr>
      <% }) %>
      </tbody>
    </table>
  <% } %>
</section>
<%- include('../partials/footer') %>
